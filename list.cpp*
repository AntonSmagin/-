#include "stdafx.h"
#include "list.h"
#include <iostream>
#include <clocale>
#include <ctype.h>
#include <cstring>


using namespace std;

/*
BRIEF: Создание первого элемента для очередь
IN: Число,которое будет элементом в списке
OUT: Адрес первого элемента структуры
*/
Queue *First1(int val) 
{
	Queue *pv = new Queue; //выделяется память
	pv->val = val; //запис. знач в поле вал
	pv->next = NULL;//указатель на следующий обнул.
	return pv; 
}

/*
BRIEF: Создание первого элемента для список
IN: Число,которое будет элементом в списке
OUT: Адрес первого элемента структуры
*/

List *First2(int val) 
{
	List *pv = new List; // выделяется память
	pv->val = val; //запис. знач в поле вал
	pv->next = NULL;//указатель на следующий обнул.
	return pv;
}

/*
BRIEF: Функция добавление элемента в очередь
IN: Адрес вершины,число,котоое вставят в список
OUT: -
*/

void add(Queue **pend, int val)  
{
	Queue *pv = new Queue; //выдел. памяти
	pv->val = val; // запись значения в поле вал
	pv->next = NULL; //указатель на следующий обнул.
	(*pend)->next = pv; // новый элемент 
	*pend = pv;        //  связываем с предыдущем элементом
}

/*
BRIEF: Функция нахождения элемента
IN: Адрес вершины,число для поиска
OUT: возвращает адрес указывающий на содержимое этого элемента
*/
List* find(List *const pbeg, int val) 
{
	List *pv = pbeg; //указателю pv присваевается адресс
	if (pv != NULL)
	{
		while (pv) 
		{
			if (pv->val == val) break;
			pv = pv->next;
		}
		return pv; 
	}
	else
		return NULL; // NULL,если не найдем элемент с заданным ключем
}

int del(Queue **pbeg) //Удаление первого элемента 
{

	int temp = (*pbeg)->val;
	Queue *pv = *pbeg;
	*pbeg = (*pbeg)->next;
	delete pv;
	return temp;
}
int del(List **pbeg) //Удаление первого элемента 
{

	int temp = (*pbeg)->val;
	List *pv = *pbeg;
	*pbeg = (*pbeg)->next; //записываем адрес следующего элемента в указатель на начало очереди
	delete pv;
	return temp;
}

/*
BRIEF: Функция удаления элемента по ключу
IN: Адрес вершины,ключ
OUT: true,если такой элемент есть - удаляем;
     false, если такого элемента нет.
*/


bool del_key(List **pbeg, int key) // Удаление элемента по ключу
{
	List *pkey = find(*pbeg, key);  // запоминаем адрес указывающий на 
	
	if (pkey != NULL) 
	{
		if (pkey == *pbeg)
			*pbeg = (*pbeg)->next;
		else {
			List *pv = *pbeg;
			while (pkey != pv->next)  // pv верменный файл 
				pv = pv->next;
			(pv)->next = pkey->next;
		}
		delete pkey;
		return true;
	}
	
	return false;
}

/*
BRIEF: Функция добавление элемента после ключа
IN: Адрес вершины, ключ, число,которое вставится после ключа
OUT: -
*/

void insert_after(List*const pbeg, int key, int el) 
{
	List*pkey = NULL;

	if ((pkey = find(pbeg, key)) != NULL)
	{
		List *pv = new List;
		pv->val = el;
		pv->next = pkey->next;
		pkey->next = pv; 
	}
	else cout << "Такого элемента нет!";
}

/*
BRIEF: Функция вставки элемента до ключа
IN: Адрес вершины,ключ,элемент,который вставится до ключа
OUT: -
*/

void insert_before(List **pbeg, int key, int el) // Добавление элемента до ключа
{
	List *pkey = NULL;
	if ((pkey = find(*pbeg, key)) != NULL)
	{
		List *pv = new List;
		pv->val = el;
		if (pkey == *pbeg)
		{
			pv->next = *pbeg;
			*pbeg = pv;

		}

		else
		{
			pv->next = pkey;
			List*k = *pbeg;
			while (k->next != pkey)
				k = k->next;
			k->next = pv;
		}
	}
	else cout << "Такого элемента нет!";
}





void print1(Queue **pbeg) //Печатаем очередь
{
	Queue *tmp = (*pbeg)->next;

	printf("%d ", (*pbeg)->val);
	while (tmp != NULL)
	{
		printf("%d ", tmp->val);
		tmp = tmp->next;
	}
	cout << endl;

}
void print2(List **pbeg) //Печатаем список
{
	List *tmp = (*pbeg)->next;

	printf("%d ", (*pbeg)->val);
	while (tmp != NULL)
	{
		printf("%d ", tmp->val);
		tmp = tmp->next;
	}
	cout << endl;

}
void menu(){
	setlocale(LC_ALL, "Russian");
	char f;
	do
	{
		cout << "***QUEUE***" << endl << endl;
		cout << "Выбирите режим программы:\n";
		cout << "1.Очередь\n";
		cout << "2.Список\n\n";

		cout << "Для продолжения выберите цифру и нажмите ENTER\n";
		cout << "Для выхода введите 0\n";
		cin >> f;
		isdigit(f);
		int c;
		c = f - '0';
		if (c >= 0 && c < 3)
		{

			switch (c)
			{
			case 0:
				system("cls");
				exit(0);

			case 1:
				system("cls");
				menu1();

			case 2:
				system("cls");
				menu2();

			}

		}
		else
		{
			cout << endl;
			cout << "Неверное значение! Введиите число от 0 до 2" << endl << endl;
			system("pause");
			cout << endl;
			system("cls");


		}
	} while (1);
}

void menu1()
{
	setlocale(LC_ALL, "Russian");

	Queue *pbeg = NULL;
	Queue *pend = NULL;
	{

		char t1;
		int first_el;
		int el = 0;
		int key = 0;
		do
		{
			cout << "***QUEUE***" << endl << endl;
			cout << "1. Добавить первый элемент в очередь\n";
			cout << "2. Добавить новый элемент в очередь\n";
			cout << "3. Удалить первый элемент из очереди\n";
			cout << "4. Распечатать элемент(ы) очереди\n\n";

			cout << "Для продолжения выберите цифру и нажмите ENTER\n";
			cout << "Для выхода введите 0\n";
			cout << "Для возврата в предыдущее меню введите 9 Внимание! Данные будут удалены!\n";
			cin >> t1;
			isdigit(t1);
			int c;
			c = t1 - '0';
			if ((c >= 0 && c < 5) || c == 9)
			{

				switch (c)
				{
				case 0:
					system("cls");
					exit(0);
				case 1:
					if (pbeg == NULL)
					{
						cout << "Создайте первый элемент\n\n";
						cin >> first_el;

						pbeg = First1(first_el);
						pend = pbeg;
					}
					else
					{
						cout << "Ошибка! Первый элемент существует!\n\n";
						system("pause");
					}
					system("CLS");
					break;

				case 2:
					if (pbeg != NULL) {
						cout << "Напишите новый элемент\n\n";
						cin >> el;
						add(&pend, el);
					}
					else {
						cout << "Ошибка! Нужно добавить первый элемент!\n\n";
						system("pause");
					}
					system("CLS");
					break;
				case 3:
					if (pbeg != NULL) {
						del(&pbeg);
						cout << "Элемент был удален из очереди\n\n";
					}
					else {
						cout << endl;
						cout << "Ошибка! Очередь пуста!\n\n";
					}
					system("pause");
					cout << endl;
					system("cls");
					break;
				case 4:
					if (pbeg != NULL) {
					cout << "Распечатаная очередь\n\n";
					print1(&pbeg);
					cout << endl;

					cout << endl;

					}
					else {
						cout << endl;
						cout << "Ошибка! Очередь пуста!\n\n";
					}
					system("pause");
					cout << endl;
					system("cls");
					break;
				case 9:


					system("cls");
					menu();
					break;


				}

			}
			else
			{
				cout << endl;
				cout << "Неверное значение! Введиите число от 1 до 4" << endl << endl;
				system("pause");
				cout << endl;
				system("cls");


			}
		} while (1);


	}

}
